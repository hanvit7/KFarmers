        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <Spinner
                android:id="@+id/spinnerWifi"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/btnWifiConnect"
                android:layout_toStartOf="@+id/btnWifiConnect"
                android:spinnerMode="dialog"
                android:textColor="@color/colorAccent" />


            <EditText
                android:id="@+id/editWifipw"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinnerWifi"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/btnWifiConnect"
                android:layout_toStartOf="@+id/btnWifiConnect"
                android:hint="Password"
                android:textColor="@color/colorAccent"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnWifiConnect"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btnWifiScan"
                android:layout_gravity="center_vertical"
                android:width="10dp"
                android:text="Connect"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/btnWifiScan"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/spinnerWifi"
                android:text="Scan"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFilmCnt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Film Count"
                android:textColor="#ff000000"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/spinnerFilmCnt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:spinnerMode="dropdown"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnDefault"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:text="Default"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/autoConnectSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Auto Connect"
                android:textColor="#ff000000"
                android:textSize="14dp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:fillViewport="false">

            <TextView
                android:id="@+id/ViewRecv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive message"
                android:textColor="@color/colorAccent"
                android:textSize="14dp" />
        </ScrollView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>

